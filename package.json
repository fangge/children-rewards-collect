{
  "name": "children-rewards-collect",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite --config vite.config.ts",
    "build": "tsc -b && vite build && electron-builder --mac --win",
    "build:mac": "tsc -b && vite build && electron-builder --mac",
    "build:win": "tsc -b && vite build && electron-builder --win",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.children.rewards",
    "productName": "儿童成长记录册",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/mac/icon.icns",
      "artifactName": "${productName}-${version}-mac.${ext}",
      "mergeASARs": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icons/win/icon.ico",
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "publish": null,
    "npmRebuild": false,
    "generateUpdatesFilesForAllChannels": false
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "dayjs": "^1.11.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.6.1",
    "@eslint/js": "^9.24.0",
    "@types/electron-store": "^3.2.2",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "antd": "^5.24.6",
    "electron": "^34.5.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
